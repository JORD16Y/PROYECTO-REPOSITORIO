Algoritmo tresbucle
	Definir llantas Como Numerica
	
	Definir costoentrada Como Real
	Definir día,edad, apellidos, cedula, estatura  Como Entero
	
	Definir descuento, montodescuento, costofinal Como Real
	
	
	
	Escribir "INGRESE EL NOMBRE"
	Leer nombre
	Repetir 
		Escribir "INGRESE EDAD"
		Leer edad
	Hasta Que edad <= 18
	
	Repetir
		Escribir "INGRESE SEXO"
		Escribir "[M] MASCULINO"
		Escribir "[F]FEMENINO"
		Leer sexo
	Hasta Que sexo = "M" o sexo = "F"
	Repetir
		Escribir "N. CÉDULA DIGITOS"
		Escribir "[1] 0-1"
		Escribir "[2] 2-3"
		Escribir "[3] 4-5"
		Escribir "[4] 6-7"
		Escribir "[5] 8"
		Escribir "[6] 9"
		Leer cedula
	Hasta Que cedula >= 1 Y cedula <= 6
	
	Repetir
		Escribir "ESTATURA"
		Escribir "[1] 1,00-1,20"
		Escribir "[2] 1,21-1,35"
		Escribir "[3] 1,36-1,60"
		Escribir "[4] 1,61-1,70"
		Escribir "[5] 1,71-1,81"
		Escribir "[6] 1,82"
		Leer estatura
	Hasta Que estatura >= 1 Y estatura <= 6 
	
	Escribir "INGRESE SU PROMEDIO"
	Leer PROMEDIO
	Si PROMEDIO  >= 9 Entonces
		PROME <- 2000
	FinSi
	
	Si PROMEDIO  >= 8 Y PROMEDIO <9 Entonces
		PROME <- 3000
	FinSi
	Si PROMEDIO  >= 8 Y PROMEDIO <9 Entonces
		PROME <- 2000
	FinSi
	Si PROMEDIO  >=6 Y PROMEDIO <8 Entonces
		PROME <- 100
	FinSi 
	
	Si PROMEDIO  <6 Entonces 
		ESCRIBIR"TIENE UNA CARTA INVITACION"
	FinSi
	
	Escribir "SU PROMEDIO:", PROMEDIO
	Escribir "SE LE AGREGA POR SU BUEN PROMEDIO:", PROME


FinAlgoritmo
